#!/usr/bin/env python2.4

import os, sys, codecs
import plasTeX
from plasTeX.TeX import TeX
from plasTeX.Config import config
from plasTeX.ConfigManager import *

def main(argv):
    """ Main program routine """
    inencoding = config['encoding']['input']
    outencoding = config['encoding']['output']

    print >>sys.stderr, 'plasTeX version 1.0'

    # Parse the command line options
    clm = CommandLineManager()
    clm['options'] = config
    clm['file'] = StringArgument()
    try: 
        clm.getopt(argv[1:])
    except Exception, msg:
        print >>sys.stderr, clm.usage()
        sys.exit(1)

    try:
        file = TeX.kpsewhich(clm['file'], ['.tex','.ltx'])
    except OSError, msg:
        print >>sys.stderr, msg
        sys.exit(1)
    basename = os.path.splitext(file)[0]
    
    # Create document instance that output will be put into
    document = plasTeX.TeXDocument()
    document.userdata['title'] = 'SAS/STAT'
    
    # Parse document
    s = TeX(codecs.open(file,'r',inencoding))
    s.parse(document)
    
    # Write expanded source file
    sourcefile = '%s.source' % basename
    open(sourcefile,'w').write(document.source.encode('utf-8'))
    
    # Write XML dump
    outfile = '%s.xml' % basename
    open(outfile,'w').write(document.toXML().encode('utf-8'))
    
    # Apply renderer
    from plasTeX.renderers.xhtml import xhtml as renderer
    renderer.render(document)
    
try:
    main(sys.argv)
except KeyboardInterrupt:
    pass
